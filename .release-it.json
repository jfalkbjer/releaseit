{
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": {
                "name": "conventionalcommits"
            },
            "infile": "CHANGELOG.md"
        }
    },
    "hooks": {
        "after:bump": "echo 'Hello World'"
    },
    "git": {
        "requireBranch": "main",
        "commitMessage": "chore(release): ${version}",
        "tagName": "v${version}"
    }
}