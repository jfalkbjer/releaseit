{
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": "angular"
        },
        "@release-it/keep-a-changelog": {
            "filename": "CHANGELOG.md",
            "addUnreleased": true,
            "keepUnreleased": true,
            "gitRawCommitsOpts": {
                "from": "${latestTag}",
                "to": "HEAD",
                "format": "* %s"
            }
        }
    },
    "git": {
        "commitMessage": "chore(release): ${version}",
        "tagName": "v${version}"
    }
}