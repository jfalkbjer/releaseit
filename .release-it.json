{
    "plugins": {
        "@release-it/keep-a-changelog": {
            "filename": "CHANGELOG.md",
            "addUnreleased": true,
            "keepUnreleased": true,
            "gitRawCommitsOpts": {
                "from": "${latestTag}",
                "to": "HEAD",
                "format": "* %s",
                "grep": "^(feat|fix|docs|style|refactor|perf|test|chore|ci|build|revert)(\\(.+\\))?:"
            }
        }
    },
    "git": {
        "commitMessage": "chore(release): ${version}",
        "tagName": "v${version}"
    }
}