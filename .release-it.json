{
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": {
                "name": "conventionalcommits"
            },
            "infile": "CHANGELOG.md"
        }
    },
    "hooks": {
        "after:bump": "sed -i '' -E \"s/version\\s*=\\s*['\\\"](.*)['\\\"]/version = '${version}'/\" build.gradle"
    },
    "git": {
        "requireBranch": "main",
        "commitMessage": "chore(release): ${version}",
        "tagName": "v${version}"
    }
}