{
    "$schema": "https://unpkg.com/release-it@18/schema/release-it.json",
    "git": {
        "commitMessage": "chore(release): ${version}",
        "tagName": "v${version}"
    },
    "github": {
        "release": true
    },
    "plugins": {
        "@release-it/keep-a-changelog": {
            "filename": "CHANGELOG.md",
            "addUnreleased": true,
            "keepUnreleased": true,
            "gitRawCommitsOpts": {
                "format": "* %s",
                "from": "${latestTag}"
            }
        }
    }
}